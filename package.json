{
  "name": "code-time-machine",
  "displayName": "Code Time Machine",
  "description": "Local data-capture layer for visualizing how code evolves over time",
  "version": "0.1.0",
  "publisher": "code-time-machine",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mehsaandev/code-time-machine"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeTimeMachine.startSession",
        "title": "Code Time Machine: Start Session"
      },
      {
        "command": "codeTimeMachine.stopSession",
        "title": "Code Time Machine: Stop Session"
      },
      {
        "command": "codeTimeMachine.rebuildFileAtTime",
        "title": "Code Time Machine: Rebuild File At Time"
      },
      {
        "command": "codeTimeMachine.pauseRecording",
        "title": "Code Time Machine: Pause Recording"
      },
      {
        "command": "codeTimeMachine.resumeRecording",
        "title": "Code Time Machine: Resume Recording"
      }
    ],
    "configuration": {
      "title": "Code Time Machine",
      "properties": {
        "codeTimeMachine.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable code change recording (opt-in required)"
        },
        "codeTimeMachine.batchIntervalMs": {
          "type": "number",
          "default": 3000,
          "description": "Batch interval for capturing diffs (in milliseconds)"
        },
        "codeTimeMachine.idleTimeoutMinutes": {
          "type": "number",
          "default": 15,
          "description": "Minutes of inactivity before session ends"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "sql.js": "^1.13.0",
    "uuid": "^9.0.0"
  }
}
